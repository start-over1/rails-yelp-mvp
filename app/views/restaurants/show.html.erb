<div class="container">
<div class="row row-cols-1 row-cols-md-3 g-4 mb-3">
  <div class="col">
    <div class="card h-100">
        <%= image_tag "https://source.unsplash.com/featured/?restaurant&#{rand(1..5)}", class: "card-img-top div.embed-responsive" %>
        <div class="card-body">
          <h2 class="card-title"><%= @restaurant.name %></h2>
          <h4 class="card-text"><%= @restaurant.category.split(' ').map(&:titleize).join(' ')%></h4>
          <p class="card-text"><%= @restaurant.address %></p>
          <p class="card-text"><%= @restaurant.phone_number %></p>
          <%= link_to "See details", restaurant_path(@restaurant), class: "btn btn-primary"%>
        </div>
    </div>
  </div>
</div>

<div class="d-grid gap-2 col-4 mb-3">
  <%= link_to "Add Review",  new_restaurant_review_path(@restaurant), class: "btn btn-primary" %>
  <%= link_to "Back To Restaurants", restaurants_path, class: "btn btn-primary "%>
</div>
<%# <div class="row row-cols-1 row-cols-md-3 m-2">
</div> %>
<h4 class="m-3"><strong>Reviews</strong></h4>
<div class="row row-cols-1 row-cols-md-3 m-2">
  <ul class="list-group left-corner">
    <% @restaurant.reviews.each do |review| %>
      <li class="list-group-item">
        <div><%= review.rating %>
        <%= review.content %>
        <%= link_to review_path(review),
      data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do %></div>
      <div><i class="fa-solid fa-trash"></i></div>
      <% end %>
      </li>

    <% end %>
  </ul>
</div>
